{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://noirforge.dev/schemas/noirforge.manifest.v1.schema.json",
  "title": "NoirForge Manifest (v1)",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "minLength": 1
    },
    "circuit_dir": {
      "type": ["string", "null"]
    },
    "proving_system": {
      "type": "string",
      "minLength": 1
    },
    "outputs": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "null"]
      }
    },
    "outputs_rel": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "null"]
      }
    },
    "hashes": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "toolchain": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "required": ["schema_version", "name", "created_at", "circuit_dir", "proving_system", "outputs"],
  "additionalProperties": true
}
